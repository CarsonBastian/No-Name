@model SearchViewModel

@{
    ViewData["Title"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h1 class="mb-2">@Model.Header</h1>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-action="Index">New Search</a>
        </div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var game in Model.Games) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Game"
                   asp-area="" asp-route-id="@game.GameId"
                   asp-route-slug="@game.Title.Slug()">@game.Title</a>
            </td>
            <td>@game.Genre.Name</td>
            <td>
                @foreach(GameDeveloper ba in game.GameDevelopers)
                {
                    <div>@ba.Developer.FullName</div>
                }
            </td>
            <td>
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@game.GameId"
                       class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@game.GameId"
                       class="btn btn-primary">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
